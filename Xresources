!------- SLACKJEFF xterm.
! Após modificação executar: 
!  xrdb -merge ${HOME}/.Xresourses

! Cor de fundo
xterm*background: black

! Cor do Texto
xterm*foreground: #00975d

! Tipo da fonte e Tamanho
xterm*faceName: terminus:pixelsize=15

! Ativar barra de rolagem.
xterm*rightScrollBar: true
xterm*ScrollBar: true

! Cursor Piscando
xterm*cursorBlink: true

! Usado no nano ;)
xterm*metaSendsEscape: true

! C-C C-V
XTerm*selectToClipboard: true
